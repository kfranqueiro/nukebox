@import '../dgrid/css/dgrid';
@import '../dgrid/css/extensions/ColumnHider';

html,
body {
	font-family: sans-serif;
	font-size: 12px;
	height: 100%;
	margin: 0;
	overflow: hidden;
	padding: 0;
	width: 100%;
}

.PlayerControls,
.SongsGrid {
	position: absolute;
	left: 0;
	right: 0;
}

.PlayerControls {
	font-size: 0;
}

.PlayerControls-icon {
	display: inline-block;
	text-align: center;
	vertical-align: middle;
}

.PlayerControls input[type=range] {
	width: 100%;
}

.SongsGrid {
	// bottom/top expected TBD by skin
	height: auto;
}
