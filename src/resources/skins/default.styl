@require 'icons';

$controlsMainColor = #000;
$controlsBackgroundColor = #f7f7f7;
$controlsHeight = 36px;
$controlsPadding = 5px;
$controlsVolumeWidth = 100px;
$buttonSize = 24px;
$buttonMargin = 2px;
$iconSize = 16px;

.PlayerControls,
.SongsGrid {
	left: 0;
	right: 0;
}

.PlayerControls {
	height: $controlsHeight;
	top: 0;

	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;

	background: linear-gradient(to bottom, $controlsBackgroundColor 0%, darken($controlsBackgroundColor, 10%) 100%);

	&-icon {
		border: 1px solid $controlsMainColor;
		border-radius: (($buttonSize + $buttonMargin) / 2);
		color: $controlsMainColor;
		cursor: pointer;
		font-size: $iconSize;
		height: $buttonSize;
		line-height: $buttonSize;
		width: $buttonSize;
	}

	&-icon:hover {
		background-color: $controlsMainColor;
		border-color: transparent;
		color: $controlsBackgroundColor;
	}

	&-controls,
	&-time-elapsed,
	&-seek,
	&-mute,
	&-volume {
		padding: $controlsPadding;
	}

	&-controls &-icon {
		margin: $buttonMargin;
	}

	&-seek {
		flex: 2;
	}

	&-mute {
		padding-right: 0;
	}

	&-volume {
		width: $controlsVolumeWidth;
	}
}

.SongsGrid {
	bottom: 0;
	top: $controlsHeight;
	height: auto;

	$dgrid-background = #fff;
	$dgrid-color = #000;
	$dgrid-border-color = #bba;

	$dgrid-header-background = #e8e8e8;
	$dgrid-header-background-image = linear-gradient(top, #fff 0%,#e8e8e8 100%);
	$dgrid-header-cell-border-color = #bba;
	$dgrid-header-cell-font-weight = bold;
	$dgrid-header-cell-hover-background = #f6f6f6;
	$dgrid-header-cell-hover-background-image = linear-gradient(top, #fff 0%, #eee 100%);

	$dgrid-body-row-odd-background-color = #f7f7f7;
	$dgrid-body-row-hover-background-color = #def;
	$dgrid-body-cell-border-color = transparent;

	$dgrid-selected-background-color = #cde;

	@import '../../dgrid/css/skins/skin';

	.is-playing {
		// Applied to row for track that is currently playing
		font-weight: bold;
	}

	.is-unplayable {
		// Applied to rows for files that are in formats that Chromium can't play
		color: #ccc;
		font-style: italic;
	}

	.dgrid-no-data {
		// "Drop songs here" placeholder
		color: #ccc;
		font-weight: bold;
		font-size: 32px;
		text-align: center;
		position: absolute;
		top: s('calc(50% - %s)', @font-size / 2);
		width: 100%;
	}
}
